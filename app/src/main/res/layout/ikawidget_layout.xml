<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
                android:id="@+id/regular_battle_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/regularmatch"
                android:textSize="25sp"/>
        <TextView
                android:id="@+id/regular_battle_stage1_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/regularmatch"
                android:layout_marginStart="20dp"
                android:textSize="20sp"/>
        <TextView
                android:id="@+id/regular_battle_stage2_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/regularmatch"
                android:layout_marginStart="20dp"
                android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp">
        <TextView
                android:id="@+id/gachi_battle_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gachimatch"
                android:textSize="25sp"/>
        <TextView
                android:id="@+id/gachi_battle_stage1_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/regularmatch"
                android:layout_marginStart="20dp"
                android:textSize="20sp"/>
        <TextView
                android:id="@+id/gachi_battle_stage2_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/regularmatch"
                android:layout_marginStart="20dp"
                android:textSize="20sp"/>
        <TextView
                android:id="@+id/time_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/regularmatch"
                android:layout_marginTop="5dp"
                android:layout_marginStart="40dp"
                android:textSize="20sp"/>
    </LinearLayout>
</LinearLayout>